
/* question detail */

.question-header
  margin-bottom 20px
  h1
    font-size 180%
    margin 0
    font-weight bold
    padding-bottom 10px
    border-bottom 1px solid $gray-lighter

.vote-cell
  float left
  width 60px
  vertical-align top

.post-cell
  margin-left 70px

.vote-up-on
.vote-up-off
.vote-down-on
.vote-down-off
.star-on
.star-off
.vote-accepted-off
.vote-accepted-on
  text-hide()
  cursor pointer
  center-block()

.vote-up-off
.vote-up-on
  size(41px, 25px)
.vote-up-off
  background-position 0 -265px
.vote-up-on
  background-position 0 -230px
.vote-down-off
.vote-down-on
  size(41px, 25px)
.vote-down-off
  background-position 0 -300px
.vote-down-on
  background-position 0 -330px

.star-off
.star-on
  size(33px, 31px)
.star-off
  background-position 0 -150px
.star-on
  background-position 0 -190px

.vote-accepted-off
.vote-accepted-on
  size(39px, 40px)
.vote-accepted-off
  background-position 0 -560px
.vote-accepted-on
  background-position 0 -460px

.vote-count
  margin-top 2px
  text-align center
  cursor pointer
  center-block()
  font-size ($font-size-large + 6px)

.post-content
  word-wrap break-word
  margin 0 5px 5px 0

.share-box
  float left
  > a
    font-size-small()
    color $gray-light
    text-decoration none
    padding 2px 4px

    &:hover
      background-color $gray
      color #ffffff


.question-status
  background-color $gray-lighter
  margin-top 15px
  margin-bottom 15px
  padding 10px 10px 5px 70px

  h2
    margin 0 0 5px
    font-size 140%
    font-weight bold
    line-height 1.3

  .mod-flair
    color $brand-primary
    margin-left 3px
    font-size 140%

  .locked_at
    font-weight normal

/* comments */
.comments
  @extend .list-unstyled
  @extend .post-cell
  border-top dotted 1px lighten($base-color, 62.7%)
  margin-top 10px
  font-size-small()

  > li
    display block
    padding 6px 10px 7px 10px
    border-bottom dotted 1px lighten($base-color, 81.5%)
    vertical-align text-top
    color $gray-dark

    &:hover
      background-color #fafafa

    a.user
      padding 2px 5px
      margin-left 5px
      margin-right 5px
      white-space nowrap
      background-color #e0eaf1
      color $brand-primary

    span.datetime
      color lighten($base-color, 58%)


.comments-link
  @extend .post-cell
  margin-bottom 20px

  .new-comment
    color $gray-light
    font-size-small()
    padding 2px 4px

    &:hover
      color #ffffff
      background-color $gray-light
      text-decoration none

.answer
  border-bottom 1px solid lighten($base-color, 62.7%)
  padding-top 20px