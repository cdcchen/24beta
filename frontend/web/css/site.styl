
@import '/usr/local/lib/node_modules/nib'
@import './stylus/index'

@import 'basic'

.beta-wrapper
  width 100%
  height 100%
  font-size 16px
  background #FFFFFF

.beta-container
  width $container-width
  margin 0 auto

.beta-content
  width $container-width - $sidebar-width - $content-sidebar-spacing-width
  height 500px

.beta-sidebar
  width $sidebar-width
  height 500px

#beta-topbar
  width 100%
  background rgba(0, 0, 0, 0.86)
  line-height 1
  font-size 14px
  height 34px

#beta-footer
  background #777777
  border-top 8px solid #000000
  clear both
  padding 15px
  margin-top 30px

.questions
  clear both

.question-item
  border-bottom 1px solid #eaeaea
  overflow hidden
  padding 10px 0

.question-stats
  float left
  width 85px
  margin-right 10px
  font-size 12px



.q-stats
  background #EEEEEE
  margin 0 0 0 7px
  padding 4px 7px 6px 7px
  .votes, .answers
    padding 0 0 7px 0
    text-align center
    color #555555
    line-height 1
  strong
    display block
    numeral-font()
  .votes
    strong
      font-size 24px
      font-weight normal
      color #808185
  .answers
    padding 4px 0
    strong
      font-size 18px
  .answered, .done
    background #75845c
  .unanswered
    color #9a4444
  .answered
    color #ffffff
    font-weight normal
  .done
    color #e1e818


.q-views
  text-align center
  color #999
  margin-top 4px
  t-rotate 10px 20px
  overflow(hidden)
  opacity(.2)
  resizable(horizontal)

.question-summary
  float left
  width $container-width - $sidebar-width - $content-sidebar-spacing-width - $stats-container-width - 10px
  h3
    font-size 100%
    line-height 1.3
    margin 0 0 5px
    padding 0
.q-excerpt
  line-height 1.2
  margin-bottom 5px
.q-tags
.q-userinfo
  line-height 18px
  font-size 12px
.q-tags
  float left
.q-userinfo
  float right
  color #888
  width 200px
  line-height 18px
  white-space nowrap
  overflow hidden
  img
    vertical-align baseline
  .asked-time
    margin 2px 0
  .gravatar
    display block
  .detail
    margin-left 37px
    span
      numeral-font()

h1
  font-size 40px
  size(500px)
  border 10px solid
  alert-variant(#ccc, #f00, #999)

table-row-variant(aa, #eeeeee)