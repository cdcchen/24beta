
/* question detail */

.question-header
  margin-bottom 20px
  h1
    font-size 165%
    margin 0
    font-weight bold
    padding-bottom 10px
    border-bottom 1px solid $gray-lighter

.vote-cell
  float left
  min-width 46px
  vertical-align top

.post-cell
  margin-left 70px

.vote-up-on
.vote-up-off
.vote-down-on
.vote-down-off
.star-on
.star-off
.vote-accepted-off
.vote-accepted-on
  text-hide()
  cursor pointer
  center-block()

.vote-up-off
.vote-up-on
.vote-down-off
.vote-down-on
.star-off
.star-on
  size(40px, 30px)

.vote-up-off
  background-position 0 -170px
.vote-up-on
  background-position -40px -170px
.vote-down-off
  background-position 0 -220px
.vote-down-on
  background-position -40px -220px
.star-off
  background-position 0 -115px
.star-on
  background-position -40px -115px

.vote-accepted-off
.vote-accepted-on
  size(39px, 40px)
.vote-accepted-off
  background-position 0 -270px
.vote-accepted-on
  background-position -40 -270px

.vote-count
.star-count
  line-height 1
  margin 8px 0
  text-align center
  center-block()

.vote-count
  font-size ($font-size-large + 2px)
.star-count
  font-size $font-size-smaller

.share-box
  float left
  > a
    font-size-small()
    color $gray-light
    text-decoration none
    padding 2px 5px

    &:hover
      background-color $gray-light
      color #ffffff


.question-status
  background-color $gray-lighter
  margin-top 15px
  margin-bottom 15px
  padding 10px 10px 5px 70px

  h2
    margin 0 0 5px
    font-size 140%
    font-weight bold
    line-height 1.3

  .mod-flair
    color $brand-primary
    margin-left 3px
    font-size 130%

  .locked_at
    font-weight normal

/* comments */
.comments
  @extend .list-unstyled
  @extend .post-cell
  border-top dotted 1px lighten($base-color, 62.7%)
  margin-top 10px
  font-size-small()

  > li
    display block
    padding 6px 10px 7px 10px
    border-bottom dotted 1px lighten($base-color, 81.5%)
    vertical-align text-top
    color $gray-dark

    &:hover
      background-color #fafafa

    a.user
      padding 2px 5px
      margin-left 5px
      margin-right 5px
      white-space nowrap
      background-color #e0eaf1
      color $brand-primary

    span.datetime
      color $gray-light2


.comments-link
  @extend .post-cell
  margin-bottom 20px

  .new-comment
    color $gray-light2
    font-size-small()
    padding 2px 4px

    &:hover
      color #ffffff
      background-color $gray-light
      text-decoration none

.answer
  border-bottom 1px solid lighten($base-color, 62.7%)
  padding-top 20px